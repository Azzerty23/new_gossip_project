<% if flash[:success] %>
  <div class="alert alert-success"><%= flash[:success] %></div>
<% end %>

<div class="d-flex justify-content-center text-center">

  <div class="card border-dark m-3" style="max-width: 18rem;">
    <div class="card-header"><%= @user.firstname %> <%= @user.lastname %> - <%= @user.email %></div>
    <div class="card-body text-dark">
      <h5 class="card-title"><%= @user.city.name %></h5>
      <% if @user.gossips.count > 0 %>
      <p class="card-text font-weight-light font-italic"> <%= @user.gossips.last.content %> </p>
      <% end %>
    </div>
  </div>

</div>

<div class="d-flex justify-content-center">
<p>
  <% if current_user == @user %>
  <%= link_to 'Edit', edit_user_path(@user) %>
   | 
  <% end %>
  <%= link_to 'Back', users_path %>
  </p>
</div>

<div class="d-flex justify-content-center">
  <% if current_user == @user %>
  <%= link_to 'Log out', session_path(@user.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-danger" %>
  <% end %>
</div>
